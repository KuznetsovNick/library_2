doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='initial-scale=1, width=device-width')
    link(rel='stylesheet' href='./global.css')
    link(rel='stylesheet' href='./book_list.css')
    link(rel='stylesheet' href='./book_info.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Jost:wght@400&display=swap')
.frame-root
    .logo-group
        img.logo-icon1(alt='' src='./logo.svg')
        .library1 Library
    .parent
        .div1(onclick="choose_book(1)")
        .div2(onclick="choose_book(2)")
        .div3(onclick="choose_book(3)")
        .div4(onclick="choose_book(4)")
        .div5(onclick="choose_book(5)")
        .div6(onclick="choose_book(6)")
        .div7(onclick="choose_book(7)")
        .div8(onclick="choose_book(8)")
        .div9(onclick="choose_book(9)")
        .div10(onclick="choose_book(10)")
    .book_info
        .title Title
        .author Author
        .year Year
        .owner Owner
        .return_date Return
        button(class="close" onclick='close_book_page()') close
        button(class="delete" onclick='delete_book()') delete
        button(class="issue" onclick='') issue
        button(class="return" onclick='') return
    button(class="prev" onclick='prev_page()') prev
    button(class="next" onclick='next_page()') next
    button(id="stock" onclick='sort_stock()') Stock
    button(id="add_book" onclick='add_book_page()') Add book
    script(src="book_page.js")
    script.
        update_table()
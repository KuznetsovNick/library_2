doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='initial-scale=1, width=device-width')
    link(rel='stylesheet' href='./global.css')
    link(rel='stylesheet' href='./book_list.css')
    link(rel='stylesheet' href='./book_info.css')
    link(rel='stylesheet' href='./issue.css')
    link(rel='stylesheet' href='./redact.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Jost:wght@400&display=swap')
    script(src="https://kit.fontawesome.com/479dd2c688.js" crossorigin="anonymous")
.frame-root
    .logo_group(onclick="start_page()")
        i(class="fa-solid fa-book-bookmark" id="logo")
        .library Library
    .parent
        .div1(onclick="choose_book(1)")
        .div2(onclick="choose_book(2)")
        .div3(onclick="choose_book(3)")
        .div4(onclick="choose_book(4)")
        .div5(onclick="choose_book(5)")
        .div6(onclick="choose_book(6)")
        .div7(onclick="choose_book(7)")
        .div8(onclick="choose_book(8)")
        .div9(onclick="choose_book(9)")
        .div10(onclick="choose_book(10)")
    .book_info
        .title Title
        .author Author
        .year Year
        .owner(onclick="dialog()") Owner
        .return_date Return
        button(class="close" onclick='close_book_page()') close
        button(class="delete" onclick='delete_book()') delete
        button(class="issue" onclick='issue_page()') issue
        button(class="return" onclick='return_book()') return
        button(class="redact_button" onclick='open_redact()') redact

    .issue_page
        input(type="text" class="owner_input" placeholder="Owner")
        input(type="date" class="date_input")
        button(class="close_issue" onclick='close_issue_page()') close
        button(class="accept_issue" onclick='accept_issue()') issue

    .redact
        input(type="text" class="title_redact" placeholder="<- Title")
        input(type="text" class="author_redact" placeholder="<- Author")
        input(type="text" class="year_redact" placeholder="<- Year")
        button(class="close_redact" onclick='close_redact_page()') close
        button(class="accept_redact" onclick='confirm_redact()') redact

    dialog(id="dialog")

    button(class="prev" onclick='prev_page()') prev
    button(class="next" onclick='next_page()') next

    button(id="stock" onclick='sort_stock()') Stock
    button(id="sort_date" onclick='sort_date()') Date
    button(id="reset" onclick='update_table()') Reset

    button(id="add_book" onclick='add_book_page()') Add book

    script(src="book_page.js")
    script.
        update_table()